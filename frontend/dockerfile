# Use lightweight Python image
FROM python:3.9-alpine

# Set working directory
WORKDIR /app

# Copy frontend files
COPY . .

# Create non-root user
RUN adduser -D app
USER app

# Expose port
EXPOSE 3000

# Serve static files using Python's built-in HTTP server
CMD ["python", "-m", "http.server", "3000", "--directory", "/app"]